from __future__ import unicode_literals

from librarian.book2anything import Book2Anything, Option


class Book2Epub(Book2Anything):
    format_name = "EPUB"
    ext = "epub"
    uses_cover = True
    uses_provider = True
    transform_flags = [
        Option('-w', '--working-copy', dest='working-copy',
                action='store_true', default=False,
                help='mark the output as a working copy'
        )
    ]
    transform_options = [
        Option(
            '-b', '--base-url', dest='base_url', metavar='URL',
            help='specifies the base URL for relative image references'
        ),
    ]


if __name__ == '__main__':
    Book2Epub.run()
