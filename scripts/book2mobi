from __future__ import unicode_literals

from librarian.book2anything import Book2Anything, Option


class Book2Mobi(Book2Anything):
    format_name = "MOBI"
    ext = "mobi"
    uses_cover = True
    cover_optional = False
    uses_provider = True

    transform_options = [
        Option(
            '-k', '--use-kindlegen',
            action='store_true', dest='use_kindlegen', default=False,
            help='use kindlegen tool instead of Calibre'
        ),
        Option(
            '-b', '--base-url', dest='base_url', metavar='URL',
            help='specifies the base URL for relative image references'
        ),
    ]


if __name__ == '__main__':
    Book2Mobi.run()
